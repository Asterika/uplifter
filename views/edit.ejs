        <div class="container-main">
          <img src="/images/sidebar_images/desertnight.jpg" class="img-fluid">
            <div>
              <h1 class="login-header">Edit Your upLIFT</h1><br />
                <div class="uplift-box">
                  <form action="/uplifts/<%=uplift.id%>?_method=PUT" method="POST">
                    <div class="dropdown">
                        <select name="typeName" id="typeDropDown">
                          <option value="empty">Today, I...</option>
                          <option value="adventured">Adventured</option>
                          <option value="celebrated">Celebrated</option>
                          <option value="connected">Connected</option>
                          <option value="created">Created</option>
                          <option value="enjoyed">Enjoyed</option>
                          <option value="gave">Gave</option>
                          <option value="honored">Honored</option>
                          <option value="laughed">Laughed</option>
                          <option value="marveled">Marveled</option>
                          <option value="played">Played</option>
                          <option value="received">Received</option>
                          <option value="shared">Shared</option>
                          <option value="stretched">Stretched</option>
                        </select><br /><br />
                    </div>
                    <!-- <label class="create" for="username">Add a Visual</label><br /> -->
                    <label class="create" name="description">Edit Your Expand</label>
                    <input class="textbox" type="textarea" name="description" value="<%=uplift.description%>"/><br /><br />
                    <input type="submit" value="Edit upLIFT" class="btn btn-login" style="background-color:var(--bright-blue)"/>
                  </form>
                </div>
            </div>
        </div>
      </div>
    </div>
  </body>
</html>





